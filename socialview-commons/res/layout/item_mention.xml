<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_mention_username"
        android:layout_width="@dimen/mention_avatar_size"
        android:layout_height="@dimen/mention_avatar_size"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/imageview_mention_username_description"
        android:src="@drawable/ic_placeholder_mention"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_mention_displayname"
            style="?android:attr/dropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"/>

        <TextView
            android:id="@+id/textview_mention_username"
            style="?android:attr/dropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"/>
    </LinearLayout>
</LinearLayout>