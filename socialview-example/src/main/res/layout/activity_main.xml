<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="io.github.hendraanggrian.socialviewexample.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.github.hendraanggrian.socialview.SocialEditText
            android:id="@+id/socialedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SocialEditText"
            app:color_hashtag="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>